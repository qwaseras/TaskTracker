<div class="container ">
      <div class="col-md-3 mx-auto">
<h2>Sign up</h2>
<div class="main-login main-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, class: "cols-sm-2 control-label" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "cols-sm-2 control-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "cols-sm-2 control-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :role, class: "cols-sm-2 control-label" %><br />
      <%= f.label :role, "Manager", class: "cols-sm-2 control-label" %>
      <%= f.radio_button :role, "manager", checked: true%>
      <%= f.label :role, "Developer", class: "cols-sm-2 control-label" %>
      <%= f.radio_button :role, "developer"%>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block login-button" %>
    </div>
  <% end %>
</div>

<%= render "users/shared/links" %>
</div>
</div>
